// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  ID Int @id @unique @default(autoincrement())
  username String @db.VarChar(32) @unique
  password String @db.Char(64)
  email String @db.VarChar(254) @unique
  phone String? @db.VarChar(258) @unique
  is_vet Boolean @default(false)
  vet_fullname String? @db.VarChar(80) @unique
  vet_degree String? @db.VarChar(80)
  vet_analysis Analysis[]
}

model Analysis {
  ID Int @id @unique @default(autoincrement())
  image_url String
  result Results?
  date DateTime @default(now())
  vet_verified Boolean?
  vet_comment String?
  mascot_id Int
  mascot Mascot @relation(fields: [mascot_id], references: [ID])
  vet_id Int?
  vet User? @relation(fields: [vet_id], references: [ID])

  @@index([mascot_id])
  @@index([vet_id])
}

enum Results {
  NOTHING
}

model Mascot {
  ID Int @id @unique @default(autoincrement())
  name String @db.VarChar(64)
  animal Animal
  breed String @db.VarChar(64)
  analysis Analysis[]
}

enum Animal {
  DEBUG
}
